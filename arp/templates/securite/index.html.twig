{% extends 'base.html.twig' %}

{% block title %}Conseils en sécurité{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .securite-luxe {
        position: relative;
        padding: 5rem 0 6rem;
        background: radial-gradient(120% 120% at 0% 0%, #0a1020 0%, #050714 45%, #01030a 100%);
        color: rgba(230, 239, 255, 0.92);
        overflow: hidden;
    }
    .securite-luxe::before,
    .securite-luxe::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        filter: blur(50px);
        opacity: 0.58;
        pointer-events: none;
    }
    .securite-luxe::before {
        width: 620px;
        height: 620px;
        top: -210px;
        left: -190px;
        background: radial-gradient(circle, rgba(231, 88, 26, 0.34) 0%, rgba(231, 88, 26, 0) 70%);
    }
    .securite-luxe::after {
        width: 520px;
        height: 520px;
        bottom: -220px;
        right: -160px;
        background: radial-gradient(circle, rgba(0, 67, 122, 0.32) 0%, rgba(0, 67, 122, 0) 70%);
    }
    .securite-shell {
        position: relative;
        z-index: 1;
        max-width: 1180px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }
    .securite-hero {
        text-align: center;
        margin-bottom: 3.5rem;
    }
    .securite-hero .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1.4rem;
        border-radius: 999px;
        border: 1px solid rgba(231, 88, 26, 0.38);
        background: rgba(8, 32, 38, 0.72);
        letter-spacing: 0.16em;
        text-transform: uppercase;
        font-size: 0.75rem;
        color: #ffbf99;
        margin-bottom: 1.6rem;
    }
    .securite-hero h1 {
        font-size: 3rem;
        font-weight: 650;
        color: #ffffff;
        margin-bottom: 1.2rem;
    }
    .securite-hero p {
        max-width: 800px;
        margin: 0 auto 1rem;
        font-size: 1.05rem;
        line-height: 1.8;
        color: rgba(230, 239, 255, 0.76);
    }
    .securite-metrics {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1.2rem;
        margin-top: 2.4rem;
    }
    .securite-metric {
        background: rgba(10, 31, 28, 0.78);
        border-radius: 20px;
        border: 1px solid rgba(231, 88, 26, 0.24);
        padding: 1.5rem 1.3rem;
        text-align: center;
        box-shadow: 0 34px 54px rgba(0, 0, 0, 0.45);
    }
    .securite-metric strong {
        display: block;
        font-size: 1.9rem;
        color: #ffffff;
    }
    .securite-metric span {
        font-size: 0.92rem;
        color: rgba(226, 238, 239, 0.74);
    }
    .securite-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        margin-bottom: 3.2rem;
    }
    .securite-card {
        padding: 2.3rem;
        border-radius: 26px;
        background: linear-gradient(210deg, rgba(231, 88, 26, 0.12), rgba(0, 67, 122, 0.12));
        border: 1px solid rgba(231, 88, 26, 0.18);
        box-shadow: 0 34px 52px rgba(0, 0, 0, 0.46);
    }
    .securite-card h2 {
        font-size: 0.95rem;
        letter-spacing: 0.14em;
        text-transform: uppercase;
        color: #ffbf99;
        margin-bottom: 1rem;
    }
    .securite-card h3 {
        font-size: 1.8rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 1.1rem;
    }
    .securite-card p,
    .securite-card li {
        color: rgba(230, 239, 255, 0.82);
        line-height: 1.75;
    }
    .securite-card ul {
        padding-left: 1.1rem;
        margin-bottom: 0;
    }
    .securite-scenarios {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.8rem;
        margin-bottom: 3rem;
    }
    .securite-scenario {
        background: rgba(13, 41, 38, 0.78);
        border-radius: 24px;
        padding: 1.9rem;
        border: 1px solid rgba(231, 88, 26, 0.24);
        box-shadow: 0 32px 54px rgba(0, 0, 0, 0.48);
        color: rgba(230, 239, 255, 0.78);
    }
    .securite-scenario strong {
        display: block;
        font-size: 1.14rem;
        color: #ffbf99;
        margin-bottom: 0.5rem;
    }
    .securite-assurance {
        margin: 3.3rem 0;
        padding: 2.6rem 2.2rem;
        border-radius: 26px;
        background: rgba(13, 41, 38, 0.6);
        border: 1px solid rgba(231, 88, 26, 0.28);
        box-shadow: 0 34px 56px rgba(0, 0, 0, 0.5);
    }
    .securite-assurance-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.6rem;
    }
    .securite-assurance-item {
        background: rgba(13, 41, 38, 0.78);
        border-radius: 20px;
        padding: 1.8rem;
        border: 1px solid rgba(231, 88, 26, 0.18);
        color: rgba(230, 239, 255, 0.78);
    }
    .securite-assurance-item h3 {
        font-size: 1.12rem;
        font-weight: 600;
        color: #ffbf99;
        margin-bottom: 0.6rem;
    }
    .securite-process {
        margin: 3.6rem 0 3.3rem;
        padding: 2.8rem 2.4rem;
        border-radius: 28px;
        background: rgba(13, 41, 38, 0.48);
        border: 1px solid rgba(231, 88, 26, 0.18);
        box-shadow: 0 36px 60px rgba(0, 0, 0, 0.52);
    }
    .securite-process h2 {
        text-transform: uppercase;
        letter-spacing: 0.16em;
        font-size: 0.85rem;
        color: rgba(231, 88, 26, 0.62);
        margin-bottom: 2rem;
    }
    .securite-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.6rem;
    }
    .securite-step {
        display: flex;
        gap: 1.1rem;
        padding: 1.6rem 1.4rem;
        border-radius: 20px;
        background: rgba(13, 41, 38, 0.48);
        border: 1px solid rgba(231, 88, 26, 0.18);
    }
    .securite-step-index {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        background: rgba(231, 88, 26, 0.22);
        color: #ffbf99;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .securite-step-title {
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 0.35rem;
    }
    .securite-step-text {
        color: rgba(230, 239, 255, 0.78);
        line-height: 1.6;
    }
    .securite-proof {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.8rem;
        margin-bottom: 3rem;
    }
    .securite-proof-card {
        padding: 2rem;
        border-radius: 24px;
        background: rgba(13, 41, 38, 0.74);
        border: 1px solid rgba(231, 88, 26, 0.24);
        box-shadow: 0 30px 52px rgba(0, 0, 0, 0.5);
    }
    .securite-proof-card h3 {
        font-size: 1.18rem;
        font-weight: 600;
        color: #ffbf99;
        margin-bottom: 0.7rem;
    }
    .securite-cta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.6rem;
        align-items: center;
        padding: 2.6rem 2.3rem;
        border-radius: 28px;
        background: linear-gradient(145deg, rgba(231, 88, 26, 0.18), rgba(0, 67, 122, 0.16));
        border: 1px solid rgba(231, 88, 26, 0.24);
        box-shadow: 0 34px 56px rgba(0, 0, 0, 0.52);
    }
    .securite-cta h3 {
        font-size: 1.88rem;
        font-weight: 620;
        color: #ffffff;
        margin-bottom: 0.6rem;
    }
    .securite-cta p {
        color: rgba(230, 239, 255, 0.78);
        margin-bottom: 0;
    }
    .securite-cta-actions {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }
    .securite-cta-actions a:nth-child(3) {
        min-width: 280px;
        flex: 0 1 auto;
    }
    .securite-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.85rem 1.9rem;
        border-radius: 999px;
        background: linear-gradient(120deg, #e7581a, #c08808);
        color: #ffffff;
        font-weight: 600;
        letter-spacing: 0.05em;
        text-decoration: none;
        box-shadow: 0 26px 48px rgba(231, 88, 26, 0.32);
    }
    .securite-btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.85rem 1.6rem;
        border-radius: 999px;
        border: 1px solid rgba(231, 88, 26, 0.24);
        background: rgba(231, 88, 26, 0.08);
        color: #ffbf99;
        text-decoration: none;
    }
    .securite-btn-primary:hover {
        color: #ffffff;
    }
    .securite-btn-secondary:hover {
        color: #ffffff;
    }
    .footer-section {
        background: transparent !important;
        color: #0b181c !important;
    }
    .footer-section .footer-legal,
    .footer-section .footer-legal a {
        color: #0b181c !important;
    }
    @media (max-width: 991px) {
        .securite-hero h1 {
            font-size: 2.5rem;
        }
        .securite-process {
            padding: 2.4rem 1.9rem;
        }
    }
    @media (max-width: 575px) {
        .securite-shell {
            padding: 0 1rem;
        }
        .securite-hero h1 {
            font-size: 2.1rem;
        }
        .securite-cta {
            grid-template-columns: 1fr;
        }
        .securite-cta-actions {
            flex-direction: column;
            width: 100%;
        }
        .securite-btn-primary,
        .securite-btn-secondary {
            justify-content: center;
            width: 100%;
        }
    }
    @media (prefers-reduced-motion: reduce) {
        .securite-metric,
        .securite-card,
        .securite-step,
        .securite-proof-card,
        .securite-cta {
            transition: none !important;
        }
    }
</style>
{% endblock %}

{% block body %}
<section class="securite-luxe">
    <div class="securite-shell">
                <header class="securite-hero">
            <span class="badge">Sécurité opérationnelle</span>
            <h1>Détectez les menaces internes avant qu'elles n'érode vos actifs</h1>
            <p>Fuites d'information, fraude interne, intrusions non autorisées : nous documentons les risques avec preuves irréfutables. Chaque mission combine audit terrain, contre-mesures et rapports exploitables légalement.</p>
            <p>Notre équipe CNAPS intervient en urgence pour sécuriser vos sites, identifier les vulnérabilités et mettre en œuvre des solutions probantes.</p>
            <div class="securite-metrics">
                <div class="securite-metric">
                    <strong>48&nbsp;h</strong>
                    <span>Pour déployer un audit sécurité complet sur site</span>
                </div>
                <div class="securite-metric">
                    <strong>89&nbsp;%</strong>
                    <span>Des risques détectés avant incidents effectifs</span>
                </div>
                <div class="securite-metric">
                    <strong>100&nbsp;%</strong>
                    <span>Conformité CNAPS et exploitabilité juridique garanties</span>
                </div>
            </div>
        </header>

        <div class="securite-grid">
            <article class="securite-card">
                <h2>Analyse</h2>
                <h3>Audit sécurité terrain complet</h3>
                <p>Reconnaissance physique exhaustive, test accès points sensibles, repérage vulnérabilités périmètre, identification risques comportementaux. Chaque donnée est documentée et horodatée.</p>
            </article>

            <article class="securite-card">
                <h2>Investigation</h2>
                <h3>Détection menaces & contre-mesures</h3>
                <p>Balayage RF détection micros/caméras, test intrusion systèmes, filature discrète, interviews ciblées. Nous documentons chaque anomalie avec chaîne de preuve intacte.</p>
            </article>

            <article class="securite-card">
                <h2>Rapport</h2>
                <h3>Dossier probatoire & recommandations</h3>
                <p>Rapports structurés, preuves horodatées exploitables légalement, plan d'action priorisé, support pour actions disciplinaires ou judiciales.</p>
            </article>
        </div>

        <section class="securite-scenarios" aria-label="Scénarios traités">
            <article class="securite-scenario">
                <strong>Fuite d'information</strong>
                <p>Enquête interne, identification du responsable, preuves d'exfiltration documentées.</p>
            </article>
            <article class="securite-scenario">
                <strong>Tentative d'intrusion</strong>
                <p>Test accès points sensibles, démonstration vulnérabilités, rapport priorisé d'améliorations.</p>
            </article>
            <article class="securite-scenario">
                <strong>Fraude collaborateur</strong>
                <p>Audit comportemental, repérage activités non autorisées, preuves exploitables disciplinairement.</p>
            </article>
        </section>

        <section class="securite-assurance" aria-label="Nos garanties">
            <div class="securite-assurance-grid">
                <div class="securite-assurance-item">
                    <h3>Conformité légale absolue</h3>
                    <p>Certification CNAPS, respect RGPD, chaîne de preuve intacte, rapports exploitables juridiquement.</p>
                </div>
                <div class="securite-assurance-item">
                    <h3>Discrétion & expertise</h3>
                    <p>Enquêteurs certifiés spécialisés, opérations cloisonnées, confidentialité blindée.</p>
                </div>
                <div class="securite-assurance-item">
                    <h3>Réactivité 24/7</h3>
                    <p>Interventions d'urgence, support immédiat, coordination avec autorités si nécessaire.</p>
                </div>
            </div>
        </section>

        <section class="securite-process" aria-label="Méthodologie">
            <h2>Notre méthodologie BENSOPS</h2>
            <div class="securite-steps">
                <div class="securite-step">
                    <div class="securite-step-index">01</div>
                    <div>
                        <div class="securite-step-title">Analyse stratégique</div>
                        <div class="securite-step-text">Définition périmètre audit, identification risques critiques, signature NDA.</div>
                    </div>
                </div>
                <div class="securite-step">
                    <div class="securite-step-index">02</div>
                    <div>
                        <div class="securite-step-title">Audit terrain</div>
                        <div class="securite-step-text">Reconnaissance physique discrète, test accès, balayage détection, filatures ciblées.</div>
                    </div>
                </div>
                <div class="securite-step">
                    <div class="securite-step-index">03</div>
                    <div>
                        <div class="securite-step-title">Documentation probatoire</div>
                        <div class="securite-step-text">Collecte preuves horodatées, chaîne de conservation sécurisée CNAPS.</div>
                    </div>
                </div>
                <div class="securite-step">
                    <div class="securite-step-index">04</div>
                    <div>
                        <div class="securite-step-title">Rapport & actions</div>
                        <div class="securite-step-text">Remise dossier sécurisée, recommandations priorisées, suivi mise en œuvre.</div>
                    </div>
                </div>
            </div>
        </section>

        <section class="securite-cta" aria-label="Contact">
            <div>
                <h3>Auditez votre sécurité avec un détective expert</h3>
                <p>Choisissez le canal qui vous convient pour débuter votre audit. Nous garantissons une réponse rapide et professionnelle.</p>
            </div>
            <div class="securite-cta-actions">
                <a class="securite-btn-primary" href="mailto:sne@bensops.com">
                    <i class="fas fa-envelope"></i>
                    Écrire au cabinet
                </a>
                <a class="securite-btn-primary" href="tel:0465574176">
                    <i class="fas fa-phone"></i>
                    Ligne directe
                </a>
                <a class="securite-btn-primary" href="{{ path('calendar') }}">
                    <i class="fas fa-calendar-alt"></i>
                    Programmer un rendez-vous
                </a>
            </div>
        </section>
    </div>
</section>
{% endblock %}
