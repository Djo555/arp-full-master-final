{% extends 'base.html.twig' %}

{% block title %}Protection contre l'espionnage industriel{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .espion-luxe {
        position: relative;
        padding: 5rem 0 6rem;
        background: linear-gradient(125deg, #020711 0%, #041325 45%, #010a18 100%);
        color: rgba(225, 236, 255, 0.92);
        overflow: hidden;
    }
    .espion-luxe::before,
    .espion-luxe::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        filter: blur(50px);
        opacity: 0.58;
        pointer-events: none;
    }
    .espion-luxe::before {
        width: 620px;
        height: 620px;
        top: -210px;
        left: -190px;
        background: radial-gradient(circle, rgba(18, 219, 255, 0.36) 0%, rgba(18, 219, 255, 0) 70%);
    }
    .espion-luxe::after {
        width: 520px;
        height: 520px;
        bottom: -220px;
        right: -160px;
        background: radial-gradient(circle, rgba(98, 120, 255, 0.34) 0%, rgba(98, 120, 255, 0) 70%);
    }
    .espion-shell {
        position: relative;
        z-index: 1;
        max-width: 1180px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }
    .espion-hero {
        text-align: center;
        margin-bottom: 3.5rem;
    }
    .espion-hero .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1.4rem;
        border-radius: 999px;
        border: 1px solid rgba(18, 219, 255, 0.38);
        background: rgba(6, 24, 44, 0.72);
        letter-spacing: 0.16em;
        text-transform: uppercase;
        font-size: 0.75rem;
        color: #a5dfff;
        margin-bottom: 1.6rem;
    }
    .espion-hero h1 {
        font-size: 3rem;
        font-weight: 650;
        color: #ffffff;
        margin-bottom: 1.2rem;
    }
    .espion-hero p {
        max-width: 780px;
        margin: 0 auto 1rem;
        font-size: 1.05rem;
        line-height: 1.8;
        color: rgba(225, 236, 255, 0.76);
    }
    .espion-metrics {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1.2rem;
        margin-top: 2.4rem;
    }
    .espion-metric {
        background: rgba(4, 18, 36, 0.78);
        border-radius: 20px;
        border: 1px solid rgba(165, 223, 255, 0.22);
        padding: 1.5rem 1.3rem;
        text-align: center;
        box-shadow: 0 34px 54px rgba(0, 0, 0, 0.45);
    }
    .espion-metric strong {
        display: block;
        font-size: 1.9rem;
        color: #7fd6ff;
    }
    .espion-metric span {
        font-size: 0.92rem;
        color: rgba(225, 236, 255, 0.72);
    }
    .espion-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        margin-bottom: 3.2rem;
    }
    .espion-card {
        padding: 2.3rem;
        border-radius: 26px;
        background: linear-gradient(210deg, rgba(255, 255, 255, 0.08), rgba(8, 24, 49, 0.72));
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: 0 34px 52px rgba(0, 0, 0, 0.46);
    }
    .espion-card h2 {
        font-size: 0.95rem;
        letter-spacing: 0.14em;
        text-transform: uppercase;
        color: #7fd6ff;
        margin-bottom: 1rem;
    }
    .espion-card h3 {
        font-size: 1.8rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 1.1rem;
    }
    .espion-card p,
    .espion-card li {
        color: rgba(225, 236, 255, 0.8);
        line-height: 1.75;
    }
    .espion-card ul {
        padding-left: 1.1rem;
        margin-bottom: 0;
    }
    .espion-scenarios {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.8rem;
        margin-bottom: 3rem;
    }
    .espion-scenario {
        background: rgba(5, 21, 40, 0.78);
        border-radius: 24px;
        padding: 1.9rem;
        border: 1px solid rgba(255, 255, 255, 0.12);
        box-shadow: 0 32px 54px rgba(0, 0, 0, 0.48);
        color: rgba(225, 236, 255, 0.78);
    }
    .espion-scenario strong {
        display: block;
        font-size: 1.14rem;
        color: #84d8ff;
        margin-bottom: 0.5rem;
    }
    .espion-assurance {
        margin: 3.3rem 0;
        padding: 2.6rem 2.2rem;
        border-radius: 26px;
        background: rgba(0, 0, 0, 0.32);
        border: 1px solid rgba(165, 223, 255, 0.24);
        box-shadow: 0 34px 56px rgba(0, 0, 0, 0.5);
    }
    .espion-assurance-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.6rem;
    }
    .espion-assurance-item {
        background: rgba(6, 24, 44, 0.78);
        border-radius: 20px;
        padding: 1.8rem;
        border: 1px solid rgba(255, 255, 255, 0.12);
        color: rgba(225, 236, 255, 0.78);
    }
    .espion-assurance-item h3 {
        font-size: 1.12rem;
        font-weight: 600;
        color: #7fd6ff;
        margin-bottom: 0.6rem;
    }
    .espion-process {
        margin: 3.6rem 0 3.3rem;
        padding: 2.8rem 2.4rem;
        border-radius: 28px;
        background: rgba(3, 12, 26, 0.68);
        border: 1px solid rgba(255, 255, 255, 0.12);
        box-shadow: 0 36px 60px rgba(0, 0, 0, 0.52);
    }
    .espion-process h2 {
        text-transform: uppercase;
        letter-spacing: 0.16em;
        font-size: 0.85rem;
        color: rgba(225, 236, 255, 0.62);
        margin-bottom: 2rem;
    }
    .espion-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.6rem;
    }
    .espion-step {
        display: flex;
        gap: 1.1rem;
        padding: 1.6rem 1.4rem;
        border-radius: 20px;
        background: rgba(0, 0, 0, 0.36);
        border: 1px solid rgba(255, 255, 255, 0.12);
    }
    .espion-step-index {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        background: rgba(18, 219, 255, 0.28);
        color: #82d8ff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .espion-step-title {
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 0.35rem;
    }
    .espion-step-text {
        color: rgba(225, 236, 255, 0.76);
        line-height: 1.6;
    }
    .espion-proof {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.8rem;
        margin-bottom: 3rem;
    }
    .espion-proof-card {
        padding: 2rem;
        border-radius: 24px;
        background: rgba(5, 20, 40, 0.78);
        border: 1px solid rgba(165, 223, 255, 0.24);
        box-shadow: 0 30px 52px rgba(0, 0, 0, 0.5);
    }
    .espion-proof-card h3 {
        font-size: 1.18rem;
        font-weight: 600;
        color: #82d8ff;
        margin-bottom: 0.7rem;
    }
    .espion-cta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.6rem;
        align-items: center;
        padding: 2.6rem 2.3rem;
        border-radius: 28px;
        background: linear-gradient(145deg, rgba(18, 219, 255, 0.18), rgba(0, 5, 15, 0.68));
        border: 1px solid rgba(165, 223, 255, 0.24);
        box-shadow: 0 34px 56px rgba(0, 0, 0, 0.52);
    }
    .espion-cta h3 {
        font-size: 1.88rem;
        font-weight: 620;
        color: #ffffff;
        margin-bottom: 0.6rem;
    }
    .espion-cta p {
        color: rgba(225, 236, 255, 0.78);
        margin-bottom: 0;
    }
    .espion-cta-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .espion-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.85rem 1.9rem;
        border-radius: 999px;
        background: linear-gradient(125deg, #82d8ff, #6278ff);
        color: #041021;
        font-weight: 600;
        letter-spacing: 0.05em;
        text-decoration: none;
        box-shadow: 0 26px 48px rgba(98, 120, 255, 0.45);
    }
    .espion-btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.85rem 1.6rem;
        border-radius: 999px;
        border: 1px solid rgba(165, 223, 255, 0.26);
        background: rgba(4, 18, 36, 0.5);
        color: #a5dfff;
        text-decoration: none;
    }
    .espion-btn-primary:hover {
        color: #041021;
    }
    .espion-btn-secondary:hover {
        color: #ffffff;
    }
    .footer-section {
        background: transparent !important;
        color: #061124 !important;
    }
    .footer-section .footer-legal,
    .footer-section .footer-legal a {
        color: #061124 !important;
    }
    @media (max-width: 991px) {
        .espion-hero h1 {
            font-size: 2.5rem;
        }
        .espion-process {
            padding: 2.4rem 1.9rem;
        }
    }
    @media (max-width: 575px) {
        .espion-shell {
            padding: 0 1rem;
        }
        .espion-hero h1 {
            font-size: 2.1rem;
        }
        .espion-cta {
            grid-template-columns: 1fr;
        }
        .espion-cta-actions {
            flex-direction: column;
            width: 100%;
        }
        .espion-btn-primary,
        .espion-btn-secondary {
            justify-content: center;
            width: 100%;
        }
    }
    @media (prefers-reduced-motion: reduce) {
        .espion-metric,
        .espion-card,
        .espion-step,
        .espion-proof-card,
        .espion-cta {
            transition: none !important;
        }
    }
</style>
{% endblock %}

{% block body %}
<section class="espion-luxe">
    <div class="espion-shell">
        <header class="espion-hero">
            <span class="badge">Counter intelligence</span>
            <h1>Neutralisez l’espionnage industriel avant l’atteinte à vos secrets stratégiques</h1>
            <p>Nous combinons cyberdéfense, protection physique et contre-mesures HUMINT selon les standards des agences internationales spécialisées.</p>
            <p>Notre cellule pluridisciplinaire protège vos innovations, données R&D et plans de croissance.</p>
            <div class="espion-metrics">
                <div class="espion-metric">
                    <strong>30&nbsp;j</strong>
                    <span>Pour déployer un dispositif complet de contre-ingérence</span>
                </div>
                <div class="espion-metric">
                    <strong>98&nbsp;%</strong>
                    <span>Des attaques identifiées avant exfiltration effective</span>
                </div>
                <div class="espion-metric">
                    <strong>12</strong>
                    <span>Industries sensibles sécurisées (aéro, défense, biotech…)</span>
                </div>
            </div>
        </header>

        <div class="espion-grid">
            <article class="espion-card">
                <h2>Sécurisation</h2>
                <h3>Audit 360° des vulnérabilités</h3>
                <p>Nous évaluons :</p>
                <ul>
                    <li>Sécurité physique, contrôles d’accès, salles sécurisées, zones sensibles.</li>
                    <li>Hygiène cybersécurité, classification données, détection intrusion.</li>
                    <li>Points de fuite HUMINT : partenaires, consultants, déplacements.</li>
                </ul>
            </article>

            <article class="espion-card">
                <h2>Détection</h2>
                <h3>Contre-mesures actives</h3>
                <p>Dispositifs déployés :</p>
                <ul>
                    <li>Balayage RF, TSCM, détection caméras et micros clandestins.</li>
                    <li>Veille dark web, intelligence concurrentielle, honeypots.</li>
                    <li>Surveillance ciblée, contrôle de loyauté, tests d’ingénierie sociale.</li>
                </ul>
            </article>

            <article class="espion-card">
                <h2>Protection</h2>
                <h3>Plan de résilience</h3>
                <p>Livrables premium :</p>
                <ul>
                    <li>Protocoles de crise, plan de réaction, cellules d’alerte 24/7.</li>
                    <li>Charte sécurité informationnelle, formation top management.</li>
                    <li>Dispositifs de veille continue, tableaux de bord KPI sécurité.</li>
                </ul>
            </article>
        </div>

        <section class="espion-scenarios" aria-label="Scénarios traités">
            <article class="espion-scenario">
                <strong>Salon international</strong>
                <p>Repérage d’agents concurrents, interception d’un vol de prototypes, dépôt plainte.</p>
            </article>
            <article class="espion-scenario">
                <strong>Intrusion numérique</strong>
                <p>Détection d’un spear phishing ciblant R&D, neutralisation rapides, sensibilisation.</p>
            </article>
            <article class="espion-scenario">
                <strong>Fuite interne</strong>
                <p>Enquête sur un consultant externe, preuve d’exfiltration, procédure judiciaire.</p>
            </article>
        </section>

        <section class="espion-assurance" aria-label="Nos garanties">
            <div class="espion-assurance-grid">
                <div class="espion-assurance-item">
                    <h3>Confidentialité</h3>
                    <p>Infrastructure sécurisée, NDA renforcée, accès restreint.</p>
                </div>
                <div class="espion-assurance-item">
                    <h3>Cadre légal maîtrisé</h3>
                    <p>Respect lois renseignement & CNAPS, conformité RGPD et Défense.</p>
                </div>
                <div class="espion-assurance-item">
                    <h3>Expertise certifiée</h3>
                    <p>Analystes cybersécurité, anciens officiers renseignement, CISM, CISSP.</p>
                </div>
            </div>
        </section>

        <section class="espion-process" aria-label="Méthodologie">
            <h2>Cadre d'intervention</h2>
            <div class="espion-steps">
                <div class="espion-step">
                    <div class="espion-step-index">01</div>
                    <div>
                        <div class="espion-step-title">Risk assessment</div>
                        <div class="espion-step-text">Cartographie actifs critiques, analyse menaces internes/externes.</div>
                    </div>
                </div>
                <div class="espion-step">
                    <div class="espion-step-index">02</div>
                    <div>
                        <div class="espion-step-title">Déploiement mesures</div>
                        <div class="espion-step-text">TSCM, cybersécurité, contrôles HUMINT coordonnés.</div>
                    </div>
                </div>
                <div class="espion-step">
                    <div class="espion-step-index">03</div>
                    <div>
                        <div class="espion-step-title">Surveillance continue</div>
                        <div class="espion-step-text">Monitoring 24/7, SOC, veille stratégique, tests intrusions.</div>
                    </div>
                </div>
                <div class="espion-step">
                    <div class="espion-step-index">04</div>
                    <div>
                        <div class="espion-step-title">Réponse & remédiation</div>
                        <div class="espion-step-text">Plan de crise, actions judiciaires, mise à jour défenses.</div>
                    </div>
                </div>
            </div>
        </section>

        <section class="espion-proof" aria-label="Études de cas">
            <article class="espion-proof-card">
                <h3>Laboratoire biotech</h3>
                <p>Fuite d’IP stoppée, dispositif SOC déployé, certification ISO 27001 obtenue.</p>
            </article>
            <article class="espion-proof-card">
                <h3>Constructeur aéronautique</h3>
                <p>Neutralisation d’un réseau concurrent, procès gagnés, dommages 12&nbsp;M€.</p>
            </article>
            <article class="espion-proof-card">
                <h3>Scale-up deeptech</h3>
                <p>Assainissement partenaires, adoption policy Zero Trust, levée fonds sécurisée.</p>
            </article>
        </section>

        <section class="espion-cta" aria-label="Contact">
            <div>
                <h3>Activez votre cellule contre-espionnage</h3>
                <p>Audit express, plan de défense priorisé, accompagnement international.</p>
            </div>
            <div class="espion-cta-actions">
                <a class="espion-btn-primary" href="tel:0465574176">Hotline sécurité : 04&nbsp;65&nbsp;57&nbsp;41&nbsp;76</a>
                <a class="espion-btn-secondary" href="{{ path('app_contact') }}">Planifier un audit TSCM</a>
            </div>
        </section>
    </div>
</section>
{% endblock %}
