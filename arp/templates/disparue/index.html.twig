{% extends 'base.html.twig' %}

{% block title %}Personnes disparues ou introuvables{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .disparue-luxe {
        position: relative;
        padding: 5rem 0 6rem;
        background: radial-gradient(120% 120% at 0% 0%, #0a1020 0%, #050714 55%, #01030a 100%);
        color: rgba(233, 237, 255, 0.88);
        overflow: hidden;
    }
    .disparue-luxe::before,
    .disparue-luxe::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        filter: blur(52px);
        opacity: 0.55;
        pointer-events: none;
    }
    .disparue-luxe::before {
        width: 620px;
        height: 620px;
        top: -210px;
        left: -180px;
        background: radial-gradient(circle, rgba(73, 123, 233, 0.34) 0%, rgba(73, 123, 233, 0) 70%);
    }
    .disparue-luxe::after {
        width: 520px;
        height: 520px;
        bottom: -220px;
        right: -160px;
        background: radial-gradient(circle, rgba(231, 88, 26, 0.32) 0%, rgba(231, 88, 26, 0) 70%);
    }
    .disparue-shell {
        position: relative;
        z-index: 1;
        max-width: 1180px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }
    .disparue-hero {
        text-align: center;
        margin-bottom: 3.8rem;
    }
    .disparue-hero .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1.4rem;
        border-radius: 999px;
        border: 1px solid rgba(231, 88, 26, 0.5);
        background: linear-gradient(135deg, rgba(231, 88, 26, 0.2), rgba(192, 136, 8, 0.12));
        letter-spacing: 0.16em;
        text-transform: uppercase;
        font-size: 0.75rem;
        color: #ffbf99;
        margin-bottom: 1.6rem;
    }
    .disparue-hero h1 {
        font-size: 3rem;
        font-weight: 650;
        color: #ffffff;
        margin-bottom: 1.3rem;
    }
    .disparue-hero p {
        max-width: 780px;
        margin: 0 auto 0.9rem;
        font-size: 1.08rem;
        line-height: 1.8;
        color: rgba(233, 237, 255, 0.75);
    }
    .disparue-metrics {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1.2rem;
        margin-top: 2.4rem;
    }
    .disparue-metric {
        background: rgba(5, 10, 24, 0.75);
        border-radius: 20px;
        border: 1px solid rgba(166, 195, 255, 0.18);
        padding: 1.5rem 1.3rem;
        text-align: center;
        box-shadow: 0 34px 54px rgba(0, 0, 0, 0.46);
    }
    .disparue-metric strong {
        display: block;
        font-size: 1.9rem;
        color: #ffffff;
    }
    .disparue-metric span {
        font-size: 0.92rem;
        color: rgba(230, 239, 255, 0.68);
    }
    .disparue-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        margin-bottom: 3.4rem;
    }
    .disparue-card {
        position: relative;
        padding: 2.3rem;
        border-radius: 26px;
        background: linear-gradient(210deg, rgba(231, 88, 26, 0.08), rgba(10, 31, 28, 0.68));
        border: 1px solid rgba(231, 88, 26, 0.12);
        box-shadow: 0 34px 52px rgba(0, 0, 0, 0.46);
    }
    .disparue-card h2 {
        font-size: 0.95rem;
        letter-spacing: 0.14em;
        text-transform: uppercase;
        color: #ffbf99;
        margin-bottom: 1rem;
    }
    .disparue-card h3 {
        font-size: 1.8rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 1.1rem;
    }
    .disparue-card ul {
        padding-left: 1.1rem;
        margin-bottom: 0;
    }
    .disparue-card p,
    .disparue-card li {
        color: rgba(230, 239, 255, 0.78);
        line-height: 1.75;
    }
    .disparue-scenarios {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.8rem;
        margin-bottom: 3rem;
    }
    .disparue-scenario {
        background: rgba(13, 41, 38, 0.72);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 24px;
        padding: 1.9rem;
        box-shadow: 0 32px 54px rgba(0, 0, 0, 0.48);
    }
    .disparue-scenario strong {
        display: block;
        font-size: 1.15rem;
        color: #e7581a;
        margin-bottom: 0.6rem;
    }
    .disparue-signet {
        margin: 3.3rem 0;
        padding: 2.6rem 2.2rem;
        border-radius: 26px;
        background: rgba(13, 41, 38, 0.6);
        border: 1px solid rgba(231, 88, 26, 0.15);
        box-shadow: 0 34px 56px rgba(0, 0, 0, 0.5);
    }
    .disparue-signet-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.6rem;
    }
    .disparue-signet-item {
        background: rgba(10, 31, 28, 0.72);
        border-radius: 20px;
        padding: 1.8rem;
        border: 1px solid rgba(231, 88, 26, 0.12);
        color: rgba(230, 239, 255, 0.78);
    }
    .disparue-signet-item h3 {
        font-size: 1.15rem;
        font-weight: 600;
        color: #ffbf99;
        margin-bottom: 0.6rem;
    }
    .disparue-process {
        margin: 3.6rem 0 3.4rem;
        padding: 2.8rem 2.4rem;
        border-radius: 28px;
        background: linear-gradient(140deg, rgba(7, 28, 48, 0.8), rgba(10, 31, 28, 0.75));
        border: 1px solid rgba(231, 88, 26, 0.12);
        box-shadow: 0 36px 60px rgba(0, 0, 0, 0.52);
    }
    .disparue-process h2 {
        text-transform: uppercase;
        letter-spacing: 0.16em;
        font-size: 0.85rem;
        color: rgba(231, 88, 26, 0.62);
        margin-bottom: 2rem;
    }
    .disparue-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.6rem;
    }
    .disparue-step {
        display: flex;
        gap: 1.2rem;
        padding: 1.6rem 1.4rem;
        border-radius: 20px;
        background: rgba(13, 41, 38, 0.48);
        border: 1px solid rgba(231, 88, 26, 0.12);
    }
    .disparue-step-index {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        background: rgba(231, 88, 26, 0.22);
        color: #ffbf99;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .disparue-step-title {
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 0.35rem;
    }
    .disparue-step-text {
        color: rgba(230, 239, 255, 0.75);
        line-height: 1.6;
    }
    .disparue-proof {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.8rem;
        margin-bottom: 3.2rem;
    }
    .disparue-proof-card {
        padding: 2rem;
        border-radius: 24px;
        background: rgba(13, 41, 38, 0.74);
        border: 1px solid rgba(231, 88, 26, 0.15);
        box-shadow: 0 30px 52px rgba(0, 0, 0, 0.5);
    }
    .disparue-proof-card h3 {
        font-size: 1.2rem;
        font-weight: 600;
        color: #ffbf99;
        margin-bottom: 0.6rem;
    }
    .disparue-legal {
        margin: 3.6rem 0;
        padding: 3.2rem 2.6rem;
        border-radius: 32px;
        background: radial-gradient(140% 140% at 10% -20%, rgba(231, 88, 26, 0.12) 0%, rgba(10, 31, 28, 0.82) 55%, rgba(5, 15, 20, 0.9) 100%);
        border: 1px solid rgba(231, 88, 26, 0.18);
        box-shadow: 0 42px 68px rgba(0, 0, 0, 0.55);
    }
    .disparue-legal-intro {
        max-width: 860px;
        margin-bottom: 2.8rem;
        text-align: center;
    }
    .disparue-legal-intro h2 {
        font-size: 2.15rem;
        font-weight: 660;
        color: #ffffff;
        margin-bottom: 1rem;
        letter-spacing: 0.02em;
    }
    .disparue-legal-intro p {
        color: rgba(230, 239, 255, 0.82);
        line-height: 1.8;
        margin: 0 auto;
    }
    .disparue-legal-metrics {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        margin-top: 1.8rem;
    }
    .disparue-legal-metric {
        display: inline-flex;
        align-items: center;
        gap: 0.9rem;
        padding: 0.75rem 1.6rem;
        border-radius: 999px;
        background: linear-gradient(135deg, rgba(231, 88, 26, 0.18), rgba(10, 31, 28, 0.78));
        border: 1px solid rgba(231, 88, 26, 0.35);
        color: #ffbf99;
        font-size: 0.95rem;
        letter-spacing: 0.05em;
    }
    .disparue-legal-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.9rem;
    }
    .disparue-legal-card {
        position: relative;
        padding: 2.2rem 2.1rem;
        border-radius: 24px;
        background: linear-gradient(190deg, rgba(13, 41, 38, 0.9), rgba(10, 31, 28, 0.88));
        border: 1px solid rgba(231, 88, 26, 0.15);
        box-shadow: 0 30px 56px rgba(0, 0, 0, 0.5);
        overflow: hidden;
    }
    .disparue-legal-card::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 24px;
        background: linear-gradient(120deg, rgba(231, 88, 26, 0.12), rgba(192, 136, 8, 0.08));
        opacity: 0.4;
        pointer-events: none;
    }
    .disparue-legal-card h3 {
        position: relative;
        font-size: 1.22rem;
        font-weight: 620;
        color: #ffbf99;
        margin-bottom: 0.9rem;
        letter-spacing: 0.01em;
    }
    .disparue-legal-card p {
        position: relative;
        color: rgba(230, 239, 255, 0.8);
        line-height: 1.72;
        margin-bottom: 1rem;
    }
    .disparue-legal-list {
        position: relative;
        padding-left: 0;
        margin: 0;
        list-style: none;
    }
    .disparue-legal-list li {
        position: relative;
        padding-left: 1.4rem;
        margin-bottom: 0.55rem;
        color: rgba(230, 239, 255, 0.78);
        line-height: 1.6;
    }
    .disparue-legal-list li::before {
        content: "";
        position: absolute;
        top: 0.55rem;
        left: 0.3rem;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: #ffbf99;
        box-shadow: 0 0 0 4px rgba(231, 88, 26, 0.2);
    }
    .disparue-legal-footnote {
        margin-top: 3rem;
        padding: 2rem 2.2rem;
        border-radius: 24px;
        background: linear-gradient(135deg, rgba(231, 88, 26, 0.18), rgba(13, 41, 38, 0.86));
        border: 1px solid rgba(231, 88, 26, 0.28);
        color: rgba(230, 239, 255, 0.85);
        line-height: 1.78;
        text-align: center;
    }
    .disparue-legal-footnote strong {
        color: #ffbf99;
    }
    .disparue-cta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.6rem;
        align-items: center;
        padding: 2.6rem 2.3rem;
        border-radius: 28px;
        background: linear-gradient(145deg, rgba(231, 88, 26, 0.12), rgba(10, 31, 28, 0.6));
        border: 1px solid rgba(231, 88, 26, 0.15);
        box-shadow: 0 34px 56px rgba(0, 0, 0, 0.52);
    }
    .disparue-cta h3 {
        font-size: 1.9rem;
        font-weight: 620;
        color: #ffffff;
        margin-bottom: 0.6rem;
    }
    .disparue-cta p {
        color: rgba(230, 239, 255, 0.75);
        margin-bottom: 0;
    }
    .disparue-cta-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .disparue-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.85rem 1.9rem;
        border-radius: 999px;
        background: linear-gradient(120deg, #e7581a, #c08808);
        color: #ffffff;
        font-weight: 600;
        letter-spacing: 0.05em;
        text-decoration: none;
        box-shadow: 0 26px 48px rgba(231, 88, 26, 0.32);
    }
    .disparue-btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.85rem 1.6rem;
        border-radius: 999px;
        border: 1px solid rgba(231, 88, 26, 0.24);
        background: rgba(231, 88, 26, 0.08);
        color: #ffbf99;
        text-decoration: none;
    }
    .disparue-btn-primary:hover {
        color: #ffffff;
    }
    .disparue-btn-secondary:hover {
        color: #ffffff;
    }
    .footer-section {
        background: transparent !important;
        color: #021b2f !important;
    }
    .footer-section .footer-legal,
    .footer-section .footer-legal a {
        color: #021b2f !important;
    }
