        .disparue-hero h1 {
            font-size: 2.5rem;
        }
        .disparue-process {
            padding: 2.4rem 1.9rem;
        }
    }
    @media (max-width: 575px) {
        .disparue-shell {
            padding: 0 1rem;
        }
        .disparue-hero h1 {
            font-size: 2.1rem;
        }
        .disparue-legal {
            padding: 2.2rem 1.6rem;
        }
        .disparue-cta {
            grid-template-columns: 1fr;
        }
        .disparue-cta-actions {
